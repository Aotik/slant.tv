.inner.contain
	margin-top 2rem
	padding-bottom 2rem

.movie
	margin-top 30px
	figure
		margin 0
		padding 0
		overflow hidden
		position relative
		.poster
			width 100%
			padding-top: 147.8%
			background-size 110%
			background-repeat no-repeat
			background-position: center center
			transition all .14s ease-in
			opacity .8
		.desc
			absolute bottom left
			width 100%
			color #fff
			background linear-gradient(bottom,  rgba(20,21,29,1), rgba(0,0,0, 0))
			height 50%
			&-inner
				absolute bottom left
				padding 1.3rem
			h4
				font-weight 600
			h6
				margin-top .3rem
				color #DADBE4
	&:hover
		figure .poster
			background-size 130%
			opacity 1

body.adaptive
	background-color lighten(color-smoke, 60%)
	nav
		li.search
			input
				color #fff
				+placeholder()
					color color-smoke
	.nooverflow
		absolute top left
		height 37%
		width 100%
		z-index -1
		overflow hidden
		+below('m')
			height 26%
		.poster
			&-overlay
				background linear-gradient(bottom, rgba(20,21,29,1), rgba(20,21,29, .4))
				width 100%
				height 100%
			width 100%
			height 100%
			absolute top -2% left -2%
			background-size cover
			background-repeat no-repeat
			background-position center 30%
			filter blur(8px)
			transform: scale(1.1)
.display_movie
	margin-top 3rem
	.m-3
		+below('m')
			display none
	.m-9
		padding 0 1.6rem
		.button.block
			display none
		+below('m')
			padding 0 1rem
			.button.block
				display block
				margin-top 2rem
	figure
		padding 0
		margin 0
		img
			width 100%
	.m0_desc
		margin-top 5rem
	.m0_sub
		color #818894
		margin-bottom .4rem
		font-size 1.2rem
	.m0_block
		width 100%
		display block
		height auto
		line-height 1.4rem
		font-size 1.1rem
		background-color #fff
		border-radius border-radius-normal
		padding 1.2rem 1.4rem
		box-shadow 0 1px 3px 0 rgba(20,21,29, .15)
		& + .m0_block
			margin-top 2rem
		&.rating
			span
				font-weight 600
				font-size 1.4rem
	.m0_inline
		display inline-block
		vertical-align top
		line-height 1.3rem
	.m0_title
		font-weight 600
		margin-top 7.3rem
		color #fff
		+below('m')
			margin-top .5rem
		span.m0_year
			font-weight 400
			margin-left .4rem
			color #DADBE4
	.m0_poster
		img
			border 4px solid white
		+below('m')
			display none
